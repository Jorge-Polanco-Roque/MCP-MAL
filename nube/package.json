{
  "name": "mal-mcp-hub-gcp",
  "version": "1.0.0",
  "description": "MCP Server centralizado â€” Monterrey Agentic Labs (GCP Cloud)",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:local": "docker compose up --build",
    "start": "node dist/index.js",
    "start:gcp": "INFRA_MODE=gcp TRANSPORT=http node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "FIRESTORE_EMULATOR_HOST=localhost:8080 STORAGE_EMULATOR_HOST=http://localhost:4443 vitest run",
    "lint": "eslint src/",
    "setup": "bash scripts/setup-gcp.sh",
    "seed": "tsx scripts/seed-catalog.ts",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js",
    "docker:build": "docker build -t mal-mcp-hub .",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.10.0",
    "@google-cloud/secret-manager": "^5.6.0",
    "@google-cloud/storage": "^7.14.0",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "cors": "^2.8.6",
    "express": "^4.21.0",
    "helmet": "^8.1.0",
    "pino": "^9.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.2.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
